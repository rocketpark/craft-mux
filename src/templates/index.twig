{% requirePermission 'accessPlugin-mux' %}

{# Redirect the user to the first sub page they can access #}
{% if currentUser.can('mux:dashboard') %}
    {% redirect cpUrl('mux/dashboard') %}
{% elseif currentUser.can('mux:assets') %}
    {% redirect cpUrl('mux/assets') %}
{% elseif currentUser.can('mux:settings') %}
    {% redirect cpUrl('mux/settings') %}
{% else %}
    {# ...or throw a 403 if they can't access anything at all #}
    {% exit 403 %}
{% endif %}